
@{
    ViewData["Title"] = "CheckoutHistory";
}
@model List<OrderViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Purchase History</h5>

                @if (Model.Any())
                {
                    <table class="table table-striped">
                        <tr> 
                            <th>Order No:</th>
                            <th>Order Date:</th>
                            <th>Details:</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CreatedDate.ToShortDateString()</td>
                                <td>
									<table class="table table-striped">

										<tr>
											<th>Course Name</th>
											<th>Course Price</th>
										</tr>
										@foreach (var item1 in item.OrderItems)
										{
										    <tr>
											    <td>@item1.ProductName</td>
											    <td>@item1.Price</td>
										    </tr>
										}
									</table>
                                </td>
                              
                            </tr>
                        }

                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        History List is empty.
                    </div>
                }


            </div>
        </div>
    </div>
</div>

